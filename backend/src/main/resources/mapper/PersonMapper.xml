<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.qingliul.digitalhuangbinhon.mapper.PersonMapper">

    <select id="findById" resultType="org.qingliul.digitalhuangbinhon.entity.Person">
        SELECT * FROM person WHERE person_id = #{personId}
    </select>

    <select id="findAll" resultType="org.qingliul.digitalhuangbinhon.entity.Person">
        SELECT * FROM person
    </select>

</mapper>